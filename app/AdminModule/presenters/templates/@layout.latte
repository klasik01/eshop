        <header class="">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <a class="navbar-brand navbar-link" n:href="Homepage:Default">Administrace webu IROPE </a>
                <div class="container-fluid">
                    <div class="navbar-header"><a class="btn btn-link navbar-btn" role="button" href="#menu-toggle" id="menu-toggle"><i class="fa fa-bars"></i></a>
                        <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-2"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                    </div>
                    <div class="collapse navbar-collapse" id="navcol-2">
                        <ul class="nav navbar-nav navbar-right" id="desktop-toolbar">
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#"><img class="img-circle" src="{$basePath}/manage/img/user-photo.jpg" width="25px" height="25px"> {$username} <i class="fa fa-chevron-down fa-fw"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li role="presentation"><a href="#"><i class="fa fa-user fa-fw"></i> Profil </a></li>
                                    <li role="presentation"><a n:href="Auth:logout"><i class="fa fa-power-off fa-fw"></i> Odhlásit se </a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div id="wrapper">
            <div id="sidebar-wrapper">
                <ol class="sidebar-nav">
                    <li><a class="" n:href="Order:Default"><i class="glyphicon glyphicon-folder-open"></i> Objednávky </a>
                        <ol>
                            <li><a class="" n:href="Order:List 'all'"><i class="fa fa-list"></i> Všechny objednávky</a></li>
                            <li><a class=""n:href="Order:List 'active'"><i class="fa fa-remove"></i> Aktuální objednávky</a></li>
                            <li><a class="" n:href="Order:List 'complete'"><i class="fa fa-check"></i> Hotové objednávky</a></li>
                        </ol>
                    </li>
                    <li><a class="" n:href="Product:Default"> <i class="glyphicon glyphicon-file"></i> Produkty</a>
                        <ol>
                            <li><a class="" n:href="Product:Create"><i class="fa fa-plus"></i> Nový</a></li>
                        </ol>
                    </li>
                    <li><a class="" n:href="Page:Default"> <i class="fa fa-quote-left"></i> Články</a></li>
                    <li><a class="" n:href="Gallery:Default"> <i class="fa fa-photo"></i> Galerie</a>
                        <ol>
                            <li><a class="" n:href="Gallery:createalbum"><i class="fa fa-plus"></i> Nový</a></li>
                        </ol>
                    </li>
                    <li><a class="" n:href="Settings:Default"><i class="glyphicon glyphicon-cog"></i> Nastavení</a>
                        <ol>
                            <li><a class="" n:href="Settings:Users"><i class="fa fa-users"></i> Uživatelé</a></li>
                            <li><a class="" n:href="Settings:Contact"><i class="fa fa-envelope-square"></i> Kontaktní údaje</a></li>
                        </ol>
                    </li>
                    <li><a class="" href="#"><i class="glyphicon glyphicon-user"></i> Správa stránek</a>
                        <ol>
                            <li><a class="" href=""><i class="fa fa-edit"></i> Vzhled stránek</a></li>
                            <li><a class="" href=""><i class="fa fa-envelope-square"></i> Obsah stránek</a></li>
                        </ol>
                    </li>
                </ol>
            </div>
            <div class="page-content-wrapper">
                <div class="container-fluid">             
                    <div class="row">
                        <div class="col-md-12">
                            {snippet flash}
                                <div n:foreach="$flashes as $flash" n:class="alert, alert-dismissable, $flash->type"  >
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    <strong>{$flash->header}</strong> {$flash->message}.
                                </div>
                            {/snippet}
                            {include content}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /container -->       
