{block content}

<div class="col-md-6">
    <div class="box-header">
        <h3 class="box-title">Album - {$album->nazev}</h3>
    </div>
    <div class="">
        {form form}
            <br />
            {label nazev /}
            {input nazev }
            <br />
            {label url /}
            {input url}
